{
  "name": "collaborative-whiteboard",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "lint-staged": {
    "*.{js,json,html,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "eslint": "eslint --cache './**/*.{ts,tsx}'",
    "prettier": "prettier './**/*.{md,js,ts,tsx,json}'",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "yarn eslint",
    "lint:prettier": "yarn prettier --check",
    "format": "run-s format:*",
    "format:eslint": "yarn eslint --fix",
    "format:prettier": "yarn prettier --write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.29.3",
    "@typescript-eslint/parser": "4.29.3",
    "babel-eslint": "10.1.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.9.1",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.2",
    "lerna": "4.0.0",
    "lint-staged": "11.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "typescript": "4.4.2"
  }
}
