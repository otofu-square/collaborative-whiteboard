{
  "extends": "./tsconfig.extend.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "noEmit": true,
    "types": [
      "react/next",
      "react-dom/next"
    ],
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "isolatedModules": true
  },
  "include": [
    "src",
    "typings",
    ".storybook"
  ]
}
